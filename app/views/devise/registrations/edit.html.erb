<br><h2>Modifier le profil de <%= resource_name.to_s.humanize %></h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <h6><%= f.label :email %></h6>
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <h6><%= f.label :password %> <i>(ne rien écrire si tu ne veux pas le changer)</i></h6>
    <%= f.password_field :password, autocomplete: "Nouveau mot de passe" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div><br>

  <div class="field">
    <h6><%= f.label :password_confirmation %></h6>
    <%= f.password_field :password_confirmation, autocomplete: "Nouveau mot de passe" %>
  </div><br>

  <div class="field">
    <h6><%= f.label :current_password %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer la modification)</i></h6>
    <%= f.password_field :current_password, autocomplete: "Mot de passe actuel" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div><br>
<% end %>

<h5>Delete my account</h5>

<p>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr(e) de vouloir supprimer votre compte ?" }, method: :delete %></p>

<%= link_to "Revenir à la page précédente", :back %>
